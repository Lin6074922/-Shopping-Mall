/**app.wxss**/

.buck {
  position: fixed;
}

.m-auto {
  margin: auto;
}

.d-flex {
  display: flex;
}

.b-boxshadow {
  border: 1rpx solid #ddd;
  background: #f7e604e7;
  box-shadow: #363523c0 0 0 40rpx;
}

/* 商品 */

.commodity {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.commodity view{
  width: 46%;
  margin-top: 25rpx;
}
.commodity>view:nth-child(2n){
  margin-left: 20rpx;
}
.commodity view image{
  width: 100%;
  height: 240rpx;
  /* margin-bottom:40rpx; */
}
.commodity view>view{
  width: 100%;
  /* margin: 25rpx; */
  /* padding: 25rpx; */
}
.commodity>view>view>text{
  display: block;
  width: 100% !important;
  height: 70rpx;
  overflow: hidden;

  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  /* margin: 0 25rpx; */
  margin-bottom: 50rpx;

  font-size: 26rpx;
}
.commodity view>view>view{
  font-size: 24rpx;
}
.commodity view>view>view>text:first-child{
  font-weight: 700;
  font-size: 26rpx;
  margin-left: 10rpx;
  color: red;
  margin-bottom: 20rpx !important;
}
.commodity view>view>view>text:last-child{
  margin-left: 80rpx;
}

/* 红色文字 */
.redSize {
  color: red;
}

/* 选择数量 */
.number{
  align-content: center;
  text-align: center;
  justify-content: center;
  align-items: center;
}
.number text{ 
  width: 45rpx;
  height: 45rpx;
  display: block;
  font-size: 32rpx !important;
  border: 1rpx solid #999;
  border-radius: 15rpx;
  margin: 0 10rpx;
  padding: 0 !important;
  padding-bottom: 5rpx !important;
}
/* 滑动选择框 */
.slide{
  text-align: center;
  font-size: 26rpx;
  /* background:#0f5; */
  padding-top: 5rpx;
  border: 1rpx solid #999;
  border-radius: 15rpx;
  width: 45rpx;
  height: 45rpx;
}
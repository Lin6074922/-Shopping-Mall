/* pages/details/details.wxss */
page{
  background: #f5f5f5;
}
/* 轮播 */
swiper{
  height: 400rpx;
}
swiper image{
  width: 100%;
  height: 100%;
}
/* 商品名称与价格 */
.detailsName{
  font-size: 32rpx;
  flex-wrap: wrap;
  background: #fff;
  /* border-bottom: 1rpx solid #999; */
}
.detailsName text{
  display: block;
}
.detailsName>text{
  height: 126rpx;
  margin: 5rpx 20rpx;
  font-weight: 600;
}
.detailsName>view{
  /* background: #0f5; */
  /* margin-left: 50rpx; */
  width: 100%;
  margin: 15rpx 5rpx;
  justify-content:space-between;
}
.detailsName>view>view text:last-child{
  padding: 10rpx  30rpx 0 30rpx;
  font-size: 32rpx !important;
}
/* 图文详情与评价切换 */
.switch{
  width: 100%;
  margin-top: 15rpx;
  /* justify-content:space-between; */
}
.switch text{
  text-align: center;
  font-size: 26rpx;
  display: block;
  width: 50%;
  background: #fff;
  padding: 10rpx 0;
}
/* 商品详情 */
.details{
  margin-top: 15rpx;
  background: #fff;
  padding-bottom: 150rpx;
}
.details text{
  font-size: 28rpx;
  display: flex;
  margin: 0 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ddd;
}
.details view{
  text-align: center;
  margin-top: 30rpx;
}
.details view image{
  width: 600rpx;
  height: 450rpx;
}
/* 评论 */
.comment text{
  display: block;
  font-size: 28rpx;
}
.comment>view{
  background: #fff;
  margin-top: 20rpx;
  padding: 15rpx 0;
}
.comment view view:first-child{
  justify-content: space-between;
  margin: 0 35rpx;
  padding-bottom:10rpx; 
  border-bottom: 1rpx solid #999;
}
.comment view view:first-child text:last-child{
  color:#999;
}
/* 评论主体 */
.comment view view:last-child{
  /* padding-top: 10rpx; */
  padding: 20rpx 0;
  margin-left: 30rpx;
}
.comment view view:last-child text:last-child{
  margin-left: 50rpx;
}
/* 暂无评论 */
.nothing{
  margin-top: 25rpx;
  text-align: center;
  background: #fff;
}
.nothing text{
  display: block;
  padding: 16rpx 0;
  font-size: 26rpx;
  color: #999
}
/* 底部固定导航栏 */
.buttonNav{
  width: 100%;
  height: 130rpx;
  background: #f5f5f5;
  bottom: 0;
  z-index: 700
}
/* 首页、客服和收藏 */
.buttonNav text{
  display: block;
  font-size: 20rpx;
  color: #999;
}
.buttonNav>view{
  width: 50%;
  justify-content: space-between;
  align-items: center;
}
.buttonNav>view>view{
  width: 100%;
  text-align: center;
}
.buttonNav>view image{
  width: 50rpx;
  height: 50rpx;
  /* margin-top: 5rpx; */
}
/* 加入购物车和立即购买 */
.buttonNav>view:last-child{
  width: 50%;
}
.buttonNav>view:last-child image{
  width: 75rpx;
  height: 75rpx;
}
.buttonNav>view:last-child>view{
  width: 50%;
  height: 100%;
  background: #09f;
}
.buttonNav>view:last-child text{
  font-size: 24rpx;
  color: #000;
  font-weight: 700;
}
.buttonNav>view:last-child>view:last-child{
  background: rgb(255, 102, 0)
}
/* 底部功能栏图标 */
@font-face {
    font-family: 'iconfont';
    src: url(data:application/font-woff2;charset=utf-8;base64,) format('woff2'),
        url(data:application/font-woff;charset=utf-8;base64,) format('woff');
    font-weight: normal;
    font-style: normal;
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 26px !important;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  color:#333 !important;
}
/* 已收藏 */
.icon-collection_fill:before {
  color: rgba(255, 118, 6, 0.918) !important;
  content: "\e6ea";
}
/* 未收藏 */
.icon-collection:before {
  content: "\e6eb";
}
/* 客服 */
.icon-customerservice:before {
  content: "\e6f1";
}
/* 首页 */
.icon-homepage:before {
  content: "\e702";
}
/* 购物车 */
.icon-publishgoods_fill:before {
  font-size: 38px !important;
  content: "\e746";
}
/* 立即购买 */
.icon-financial_fill:before {
  font-size: 38px !important;
  content: "\e74b";
}
/* 购物车背景 */
.block{
  position: fixed;
  left: 0;top: 0;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.4;
  z-index: 500;
}
.block view{
  width: 100%;height: 100%;
}
/* 商品弹出选择框 */
.anima{
  width: 100%;
  height: 600rpx;
  background: #fff;
  position: fixed;
  bottom: 0rpx;
  z-index: 800;
}
.anima>text{
  display: block;
  word-break: keep-all;
  word-wrap: break-word;
  padding: 15rpx 30rpx;
  border-bottom: 1rpx solid #999;
}
.anima>view{
  padding: 15rpx 20rpx;
  border-bottom: 1rpx solid #999;
  flex-wrap: wrap;
}
.anima>view>view{
  border: 1rpx solid #333;
  border-radius: 15rpx;
  margin: 10rpx 0;
  margin-left: 30rpx;
  display: flex;
  text-align: center;
}
.anima>view text{
  padding: 10rpx 20rpx;
  font-size: 22rpx;
}
/* 选中后的样式 */
.size{
  background: #333;
  color: #fff
}
/* 价格 */
.anima>view:last-child text{
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  /* width: 20%; */
}
.anima>view:last-child button{
  /* display: block; */
  /* background: #0f5; */
  /* justify-content: center; */
  width: 100%;
  /* right: 20rpx; */
}


/* pages/Shopping/Shopping.wxss */
page{
  background: #f5f5f5;
}
.lastButtom{
  margin-bottom: 100rpx;
}
.shopping{
  background: #fff;
  /* width: 100%; */
  height: 200rpx;
  align-items: center;
  margin-top: 30rpx;
}
.shopping image{
  width: 200rpx;
  height: 100%;
}
.shopping icon{
  /* height: 100%; */
  margin: 0 15rpx;
}
.shopping>view{
  /* height: 100rpx; */
  width: 63.2%;
}
.shopping>view>text{
  display: block;
  height: 100rpx;
  font-size: 24rpx;
  margin:0 20rpx; 
  overflow: hidden;
}
.shopping>view>view>text{
  width: 150rpx;
}
.shopping>view>view text{
  display: block;
}
.shopping>view>view{
  margin: 0 15rpx;
  margin-top: 20rpx;
  justify-content: space-between;
  font-size: 30rpx;
}
/* 底部固定结算和总价栏 */
.settlement{
  position:fixed;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  background: #fff;
  justify-content: space-between;
  align-items: center;
}
.settlement icon{
  margin : 0 40rpx;
}
.settlement text{
  font-size: 42rpx;
  color: red;
  font-weight: 700;
  text-align: center;
  padding-bottom: 10rpx;
}
.settlement button{
  margin: 0 ;
  width: 300rpx;
  height: 100%;
  /* right: 0; */
}
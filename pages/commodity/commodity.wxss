/* pages/commodity/commodity.wxss */
/* 将组件变成弹性布局，否则无法正确使用margin-top */
page{
  display: flex;
}
.commodity{
  margin-top:150rpx; 
}
/* 将搜索框固定在顶部 */
.back{
  flex-direction: column;
  /* height: 70rpx; */
  background: #f5f5f5;
  width: 100%;
  /* float: left; */
  position: fixed;
}
/* .back::after{display: block;height: 0;clear: both;content: ''} */
/* 搜索框 */
.search{
  width: 95%;
  height: 50rpx;
  background: #fff;
  margin:15rpx 20rpx;
  margin-right: 20rpx;
  border-radius: 15rpx;
  border-bottom: 1rpx solid #999;
}
.search>view{
  width: 50rpx;
  height: 50rpx;

}
.search view image{
  margin: 0 10rpx;
  width: 50%;
  height: 50%;
}
.search input{
  width: 100%;
  margin-left: 10rpx;
  font-size: 22rpx;
  /* border: 1rpx solid #0f0; */
}
/* 排序框 */
.sort{
  justify-content:space-between;
  border-top: 1rpx solid #ddd;
  padding:15rpx 70rpx; 
}
.sort text{
  font-size: 30rpx;
}
